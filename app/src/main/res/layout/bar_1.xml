<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/grey_2">

    <androidx.cardview.widget.CardView
        android:id="@+id/form_card1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="11dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/route"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/icon_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/form_card1"
        app:layout_constraintStart_toStartOf="@+id/form_card1"
        app:layout_constraintEnd_toEndOf="@+id/form_card1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:text="Сложный\nмаршрут"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_display_regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/form_card2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/form_card1"
        app:layout_constraintTop_toTopOf="@+id/form_card1"
        android:layout_marginHorizontal="31.5dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ball"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/icon_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/form_card2"
        app:layout_constraintStart_toStartOf="@+id/form_card2"
        app:layout_constraintEnd_toEndOf="@+id/form_card2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:text="Куда угодно"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_display_regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/form_card3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintStart_toEndOf="@+id/form_card2"
        app:layout_constraintTop_toTopOf="@+id/form_card1"
        android:layout_marginHorizontal="31.5dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/calendar"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/icon_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/form_card3"
        app:layout_constraintStart_toStartOf="@+id/form_card3"
        app:layout_constraintEnd_toEndOf="@+id/form_card3"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:text="Выходные"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_display_regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/form_card4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toEndOf="@+id/form_card3"
        app:layout_constraintTop_toTopOf="@+id/form_card1"
        android:layout_marginHorizontal="31.5dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/fire"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/icon_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/form_card4"
        app:layout_constraintStart_toStartOf="@+id/form_card4"
        app:layout_constraintEnd_toEndOf="@+id/form_card4"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:text="Горячие\nбилеты"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_display_regular"/>



</androidx.constraintlayout.widget.ConstraintLayout>